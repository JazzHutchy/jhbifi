<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<section class="text-center p-3">
  <span class="field p-3">
    <%= form.label :title %>
    <%= form.text_area :title, id: :listing_title %>
  </span>

  <div class="field p-3">
    <%= form.label :description %>
    <%= form.text_area :description, id: :listing_description %>
  </div>

  <div class="field p-3">
    <%= form.label :list_date %>
    <%= form.date_select :list_date, id: :listing_list_date %>
  </div>

  <div class="field p-3">
    <%= form.label :price %>
    <%= form.number_field :price, id: :listing_price %>
  </div>

  <div class="field p-3">
  <%= form.label :photos %>
  <%= form.file_field :photos, id: :photos, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</section>
<% end %>
