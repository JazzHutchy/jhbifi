<p id="notice"><%= notice %></p>

<div class="title-font">
  <h1 class="text-center">
    <%= @listing.title %>
  </h1>
</div>

<p class="text-center">
  <% @listing.listing_photos.each do |photo| %>
    <%= image_tag photo.photo_url(:thumb) %><br>
  <% end %>
</p>

<div class= "container">
  <div class="d-flex flex-column border">
    <p>
      <strong><%= @listing.title %></strong>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency @listing.price %>
    </p>
  </div>

  <div class="d-flex flex-column border">
    <p>
      <strong>Listed on: </strong>
      <%= @listing.list_date %>
    </p>
  </div>
</div>

<p class="container border">
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p class="text-center">
  <strong><%= @listing.user.profile.name %></strong>
</p>

<p class="text-center">
  <%=image_tag(@listing.user.profile.profile_photo.photo_url(:thumb)) unless @listing.user.profile.profile_photo.nil? %>
</p>


<div class="text-center">
    <%= link_to 'Message me!', conversations_path(buyer_id: current_user.id, listing_id: @listing.id), method: 'post', class: 'btn btn-success mt-3 mb-3' %>

</div>

