<p id="notice"><%= notice %></p>

<h2 class="text-center p-3">Listings</h2>

<table>

  <tbody>
    <% @listings.each do |listing| %>
      <div class="container">
        <div class="row border">
          <div class="col-md-5 border">

            <% listing.listing_photos.each do |listing_photo|%>
              <%= image_tag listing_photo.photo_url(:thumb)%>
            <% end %>

          </div>
          <div class="col-md-5">
            <strong><p class="mt-3"><%= link_to "#{listing.title}", listing, class: "text-success" %></p></strong>
            <p><%= number_to_currency listing.price %></p>
            <p><%= listing.description %></p>
            <p><%= link_to 'More Info', listing %></p>
          </div>
          <div class="col-md-2">
            <p><%= Profile.find(listing.user_id).city%>, <%= Profile.find(listing.user_id).state%>, <%= Profile.find(listing.user_id).country_code%>
            <strong><p>Listed on: </strong><%= listing.list_date %></p>
          </div>
        </div>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
