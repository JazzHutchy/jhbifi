<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<section class="container text-center p-3">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :profile_name %>
  </div>

  <div class="field p-3">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, id: :profile_phone_number %>
  </div>

  <div class="field p-3">
    <%= form.label :address %>
    <%= form.text_area :address, id: :profile_address %>
  </div>

  <div class="field p-3">
    <%= form.label :city %>
    <%= form.text_field :city, id: :profile_city %>
  </div>

  <div class="field p-3">
    <%= form.label :state %>
    <%= form.text_field :state, id: :profile_state %>
  </div>

  <div class="field p-3">
    <%= form.label :country_code %>
    <%= form.text_field :country_code, id: :profile_country_code %>
  </div>

  <div class="field p-3">
  <%= form.label :photos %>
  <%= form.file_field :photos, id: :photos, multiple: true %>
</div>

  <div class="actions p-3">
    <%= form.submit %>
  </div>
<% end %>
